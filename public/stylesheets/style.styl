/*
 * Import nib
 */
@import 'nib'

@font-face
    font-family Extra
    src url(HANNOMMoEExtra-Regular.otf) format(truetype),
         url(HANNOMMoEExtra-Regular.woff) format(woff);

@font-face 
    font-family Subset
    src url(HannomMoeSubset.otf) format(truetype),
         url(HannomMoeSubset.woff) format(woff);

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

body
  font-family "Subset", "Extra", "HAN NOM A", "HAN NOM B", sans-serif
  background-color background-color
  color #444

header
  //color #fff
  //text-align center
  margin-bottom 20px

  h1
    font-size 50px
    margin-bottom 10px
  span
    font-size 15px
  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  //background-color main-color
  //border-bottom 1px solid darken(main-color, 30%)
  //text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 800px
  height auto
  margin 50px auto
  overflow hidden

.main-content
  padding-top 50px

  p
    margin-bottom 20px

  #query
    padding 5px
    font-size 16pt
    border-radius 5px
    margin-bottom 50pt
    //position fixed
    //margin-left: 1%;
    //margin-right: 1%;
 
  #dictcontent
    box-shadow 1px 1px 3px 0px #999
    border 1px solid #ddd
    margin-bottom: 50pt
    padding 5px 10px
    //margin-left 50px
    margin-right 1%
    height auto
    background #fff
    border-radius: 10px
    bottom 5px
    word-break: break-all

    .entry
        border-bottom 1px ridge #999
        margin-bottom 10px

    .entry_header_r
    .entry_header_l
        display inline-block
        float left

    h1.title
        display inline
        float left
        font-size 38pt
        margin-top 5px
        padding 5px 10px

    ol
        list-style-type decimal    
        padding 5px 10px 5px 10px
        font-size 14pt
        margin-left 30px
    li
        margin-bottom 10px
 
    span.nodefinition
        display block

    span.definition
        font-size 14pt
        margin-top 5px
        padding 5px 10px 5px 10px
        display block

    a
        color inherit
        text-decoration none
        font-size 14pt

    a:hover
        text-decoration underline
        color red
    
    p.clear
        clear both

    span.bopomofo
        margin-top 5px

    span.bopomofo
    span.bopomofo2
    span.pinyin
        white-space nowrap
        clear left
        display block
        float left
        padding 5px 10px
        font-size 10pt
        font-family: "Subset", "Extra", "教育部標準楷書", "標楷體", BiaoKai, "Courier New", sans-serif;

p
  line-height 1.8

